# LLM Provider Configuration
LLM_PROVIDER=openai  # Options: openai, ollama
LLM_OPENAI_API_KEY=your_openai_api_key_here
LLM_OLLAMA_BASE_URL=http://localhost:11434
LLM_OLLAMA_MODEL=llama3

# Redis Configuration
LLM_REDIS_HOST=localhost
LLM_REDIS_PORT=6379
LLM_REDIS_DB=0
LLM_REDIS_PASSWORD=
LLM_REDIS_CACHE_TTL=604800  # 7 days in seconds

# LLM Generation Configuration
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=1000
